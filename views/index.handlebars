<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the Good Burger!</h1>
        <p class="lead"></p>
        <hr class="my-4">
        <p>It's ALL THAT and then some!</p>

    </div>
    <div class="row">
        <div class="col-md-12">
            {{#each burger_data}}
            {{#unless this.devoured}}
            <div class="col-md-12">
                <pre>{{this.id}}. {{this.burger_name}} </pre>
            </div>
            <div class="col-md-9">
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-primary btn-lg submit">OM NOM NOM</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
    </div>
    <div class="col-md-6 text-center">
        {{#each burger_data}}
        {{#if this.devoured}}
        <input class="form-control" type="text" placeholder="{{this.id}}, {{this.burger_name}}" readonly>
        {{/if}}
        {{/each}}
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <h4>Add one to the menu!</h4>
        </div>
    </div>


</div>